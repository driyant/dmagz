<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Magazine</title>
</head>
<body>
  <h1>Magazine</h1>
  <a href="/magazine/add">Add</a>

  <form action="/magazine" method="get">
    <input type="text" name="keywords">
    <button type="submit">search</button>
  </form>
  <table border="1">
    <tr>
      <th>Magazine</th>
      <th>Total Page</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Publisher</th>
      <th>Action</th>
    </tr>
    <% for(const magazine of magazines) { %>
      <tr>
        <td><%= magazine.title %></td>
        <td><%= magazine.totalPage %></td>
        <td><%= magazine.currencyIDR() %></td>
        <td><%= magazine.stock %></td>
        <td><%= magazine.Publisher.nameOfPublisher %></td>
        <% if (userRole === "admin") { %>
          <td>
            <a href="/magazine/edit/<%= magazine.id %>">Edit</a>
            <a href="/magazine/delete/<%= magazine.id %>">Delete</a>
          </td>
        <% } else { %>
          <td>
            <a href="/magazine/buy/<%= magazine.id %>">Buy</a>
          </td>
        <% } %>
      </tr>
    <% } %>
  </table>
  <a href="/logout">Logout</a>
</body>
</html>